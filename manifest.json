{
  "manifest_version": 2,
  "name": "Skin.Club ROI Calculator",
  "version": ".01",
  "permissions": [
    "activetab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*.skin.club/*"  
  
  ],
  "description": "Calculates case profitability for skin.hub",

  "icons": {
    "48": "icons/border-48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  }
}
